Host beaglebone
     HostName beaglebone.local
     User debian

Host pi
     HostName raspberrypi.local
     User pi

Host tux-dark-tower
     HostName 192.168.1.2
     User geoff
     ForwardAgent yes
     ForwardX11 yes

Host *
     CheckHostIP yes
     PasswordAuthentication yes
     RhostsRSAAuthentication no
     RSAAuthentication yes
     AddKeysToAgent yes
     UseKeychain yes
     IdentityFile ~/.ssh/id_rsa
